<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.mapper.UserMapper">
    <insert id="createUser" parameterType="com.example.demo.domain.entity.User">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            select LAST_INSERT_ID()
        </selectKey>
        insert into user (username, password, email)
        values (#{username}, #{password}, #{email})
    </insert>
    <select id="listAllUser" resultType="com.example.demo.domain.entity.User">
        select *
        from user
    </select>
    <update id="changeUsername">
        update user
        set username = #{newUsername}
        where id = #{id}
    </update>
    <update id="changeUserPassword">
        update user
        set password = #{newPassword}
        where id = #{id}
    </update>
</mapper>